<div class="row">
    <div class="col-sm-9">
        <h1><%= @event[:title] %> <i class="fas fa-globe-americas"></i> </h1>
        <p><%= @event[:description] %></p>
        <% for rsvp in @rsvps %>
            <% user = @users_table.where(:id => rsvp[:user_id]).to_a[0] %>
            <div class="media">
                <% if rsvp[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= rsvp[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary">Let us know if you also go here!</a>
        </p>
    </div>
    <div class="col-sm-3">
        <h3><i class="fas fa-map-marker-alt"></i> Address</h3>
        <p><%= @event[:date] %></p>
        <h3><i class="fas fa-bed"></i> Local Hotel</h3>
        <p><%= @event[:location] %></p>
        <h3><i class="far fa-star"></i> Famous visitors</h3>
        <p><%= @count %></p>
    </div>
</div>
